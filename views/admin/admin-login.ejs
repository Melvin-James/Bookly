<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AdminLogin-Bookly</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap">
    <style>
        :root {
            --primary: #007D8B;
            --primary-dark: #005F66;
            --text: #333333;
            --light-text: #666666;
            --background: #f8f9fa;
            --card: #ffffff;
            --border: #e0e0e0;
            --error: #e53935;
            --success: #43a047;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', Arial, sans-serif;
            background: var(--background);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            color: var(--text);
        }

        .container {
            width: 100%;
            max-width: 420px;
            background: var(--card);
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .container:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
        }

        .logo-container {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            font-size: 28px;
            font-weight: 600;
            color: var(--primary);
            letter-spacing: 0.5px;
        }

        h2 {
            text-align: center;
            color: var(--primary);
            margin-bottom: 30px;
            font-weight: 500;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 24px;
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            color: var(--light-text);
            font-weight: 500;
        }

        input {
            width: 100%;
            padding: 14px 16px;
            border: 1px solid var(--border);
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s ease;
            background-color: #f9f9f9;
            color: var(--text);
            font-family: 'Poppins', Arial, sans-serif;
        }

        input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0, 125, 139, 0.1);
            background-color: #fff;
        }

        input::placeholder {
            color: #aaa;
        }

        .error {
            color: var(--error);
            font-size: 13px;
            margin-top: 6px;
            font-weight: 400;
        }

        .btn {
            width: 100%;
            background: var(--primary);
            color: white;
            padding: 14px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.3s ease;
            margin-top: 10px;
            font-family: 'Poppins', Arial, sans-serif;
        }

        .btn:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 125, 139, 0.2);
        }

        .btn:active {
            transform: translateY(0);
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 25px 0;
            color: var(--light-text);
            font-size: 14px;
        }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: var(--border);
        }

        .divider span {
            padding: 0 15px;
        }

        .footer {
            text-align: center;
            margin-top: 25px;
            font-size: 14px;
            color: var(--light-text);
        }

        .footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        @media (max-width: 480px) {
            .container {
                padding: 30px 20px;
            }
            
            h2 {
                font-size: 22px;
                margin-bottom: 25px;
            }
            
            input {
                padding: 12px 14px;
                font-size: 14px;
            }
            
            .btn {
                padding: 12px;
                font-size: 15px;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="logo-container">
            <div class="logo">Bookly</div>
        </div>
        <h2>Admin Login</h2>
        <form id="adminLogin-form">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="Enter your email">
                <p class="error" id="error-email"></p>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password">
                <p class="error" id="error-password"></p>
            </div>

            <button type="submit" class="btn">Sign In</button>
        </form>
        
        <div class="footer">
            <p>Bookly Admin Portal &copy; 2025</p>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#adminLogin-form").submit(function (event) {
                event.preventDefault();

                const formData = {
                    email: $("#email").val().trim(),
                    password: $("#password").val(),
                };

                if (!formData.email || !formData.password) {
                    Swal.fire({
                        toast:true,
                        position:'top-end',
                        icon: "error",
                        title: "All fields are required",
                        showConfirmButton: false,
                        timer:2000
                    });
                    return;
                }

                $.ajax({
                    url: "/admin/login",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(formData),
                    success: function (response) {
                        $(".error").text(""); 

                        if (response.errors) {
                            for (const field in response.errors) {
                                $(`#error-${field}`).text(response.errors[field]);
                            }
                        } else {
                            Swal.fire({
                                toast :true,
                                position:'top-end',
                                icon: "success",
                                title: "Login success!",
                                showConfirmButton: false,
                                timer:1000
                            }).then(() => {
                                window.location.href = response.redirectTo;
                            });
                        }
                    }
                });
            });
        });
    </script>

</body>
</html>