<div class="max-w-3xl mx-auto mt-8 px-4">
  <div class="bg-white rounded-lg shadow p-6">

    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-primary">My Wallet</h2>
      <a href="/user/profile" 
        class="text-sm bg-[#007D8B] text-white px-4 py-2 rounded hover:bg-[#006673] transition">
        Back to Profile
      </a>
    </div>

    <div class="bg-gray-50 p-6 rounded-lg text-center shadow-inner">
      <p class="text-gray-700 text-lg mb-2">Your current wallet balance is</p>
      <p class="text-3xl font-bold text-green-600">₹ <%= walletBalance.toFixed(2) %></p>
    </div>

    <!-- Wallet transaction history -->
    <div class="mt-8">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Wallet Transactions</h3>
      <ul class="space-y-3">
        <% if (walletTransactions && walletTransactions.length > 0) { %>
          <% walletTransactions.forEach(transaction => { %>
            <li class="flex justify-between text-sm">
              <span>
                <%= transaction.type === 'credit' ? 'Refund from Order' : 'Payment for Order' %>
                <%= transaction.orderId %>
              </span>
              <span class="<%= transaction.type === 'credit' ? 'text-green-500' : 'text-red-500' %> font-medium">
                <%= transaction.type === 'credit' ? '+' : '-' %>₹<%= transaction.amount.toFixed(2) %>
              </span>
            </li>
          <% }); %>
        <% } else { %>
          <li class="text-center text-gray-500">No transactions found.</li>
        <% } %>
      </ul>
    </div>

  </div>
</div>
