<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Bookly</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Google Sign-In API -->
    
    <style>
        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #007D8B;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            animation: spin 1s linear infinite;
            margin: 10px auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        :root {
            --primary: #007D8B;
            --primary-dark: #005F66;
            --light: #f8f9fa;
            --gray: #e9ecef;
            --dark: #212529;
            --error: #e74c3c;
            --success: #28a745;
            --radius: 8px;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
        }
        
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }
        
        body {
            background-color: var(--light);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }
        
        .signup-card {
            width: 100%;
            max-width: 900px;
            background: white;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            overflow: hidden;
            position: relative;
            display: flex;
            flex-direction: column;
        }
        
        .form-header {
            padding: 1.5rem;
            text-align: center;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
        }
        
        .form-header h1 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }
        
        .form-header p {
            font-size: 0.875rem;
            opacity: 0.9;
        }
        
        .progress-steps {
            display: flex;
            justify-content: center;
            padding: 1rem;
            gap: 0.5rem;
            max-width: 300px;
            margin: 0 auto;
        }
        
        .step {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: var(--gray);
            color: var(--dark);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
            font-size: 0.875rem;
            transition: all 0.3s ease;
        }
        
        .step.active, .step.completed {
            background-color: var(--primary);
            color: white;
        }
        
        .step.completed::after {
            content: 'âœ“';
        }
        
        .step-line {
            flex: 1;
            height: 2px;
            background-color: var(--gray);
            margin: auto 0;
            position: relative;
        }
        
        .step-line.active::after {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 100%;
            background-color: var(--primary);
            animation: fillLine 0.5s ease-out;
        }
        
        @keyframes fillLine {
            from { width: 0; }
            to { width: 100%; }
        }
        
        .form-container {
            padding: 1.5rem;
            flex: 1;
        }
        
        .form-section {
            display: none;
            animation: fadeIn 0.3s ease-out;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .form-section.active {
            display: block;
        }
        
        .form-group {
            margin-bottom: 1rem;
            position: relative;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            color: var(--dark);
            font-weight: 500;
        }
        
        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--gray);
            border-radius: var(--radius);
            font-size: 0.875rem;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0, 125, 139, 0.2);
        }
        
        .btn {
            width: 100%;
            padding: 0.75rem;
            border: none;
            border-radius: var(--radius);
            background-color: var(--primary);
            color: white;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            background-color: var(--primary-dark);
        }
        
        .btn-secondary {
            background-color: white;
            color: var(--primary);
            border: 1px solid var(--primary);
            margin-top: 0.5rem;
        }
        
        .form-navigation {
            display: flex;
            gap: 0.75rem;
            margin-top: 1rem;
        }
        
        .form-navigation .btn {
            flex: 1;
        }
        
        .form-footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.875rem;
            color: #6c757d;
        }
        
        .form-footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }
        
        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0.75rem;
        }
        
        .grid-3 {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 0.75rem;
        }
        
        /* Wider layout styles */
        .section-content {
            max-width: 800px;
            margin: 0 auto;
        }
        
        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary);
            text-align: center;
        }
        
        .divider {
            display: flex;
            align-items: center;
            margin: 1.5rem 0;
            color: #6c757d;
            font-size: 0.875rem;
        }
        
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-top: 1px solid var(--gray);
        }
        
        .divider span {
            padding: 0 1rem;
        }
        
        .social-login {
            margin-bottom: 1.5rem;
        }
        
        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--gray);
            border-radius: var(--radius);
            background-color: white;
            color: var(--dark);
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .google-btn:hover {
            background-color: #f8f9fa;
        }
        
        .google-btn img {
            width: 18px;
            height: 18px;
        }
        
        @media (max-width: 768px) {
            .grid-3 {
                grid-template-columns: 1fr;
            }
            
            .signup-card {
                max-width: 600px;
            }
        }
        
        @media (max-width: 480px) {
            .grid-2, .grid-3 {
                grid-template-columns: 1fr;
            }
            
            .signup-card {
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="signup-card">
        <div class="form-header">
            <h1>Bookly Signup</h1>
            <p>Create your account in just two simple steps</p>
        </div>
        
        <div class="progress-steps">
            <div class="step active" data-step="1">1</div>
            <div class="step-line"></div>
            <div class="step" data-step="2">2</div>
        </div>
        
        <div class="form-container">        
            <div class="social-login">
                <a href="/user/google" class="google-btn">
                    <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google Icon">
                    Sign up with Google
                </a>
            </div>

            
            <form id="signupForm" enctype="multipart/form-data">
                <!-- Personal Details Section -->
                <div class="form-section active" data-section="1">
                    <div class="section-content">
                        <div class="grid-3">
                            <div class="form-group">
                                <label for="name">Full Name</label>
                                <input type="text" id="name" name="name" class="form-control" placeholder="Your full name">
                            </div>
                            
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" class="form-control" placeholder="your@email.com">
                            </div>
                            
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="tel" id="phone" name="phone" class="form-control" placeholder="10-digit number">
                            </div>
                        </div>
                        
                        <div class="grid-2">
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" class="form-control" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢">
                            </div>
                            
                            <div class="form-group">
                                <label for="confirmPassword">Confirm Password</label>
                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="referralCode">Referral Code (optional)</label>
                            <input type="text" id="referralCode" name="referralCode" class="form-control" placeholder="e.g. BOOK1234">
                        </div>

                        <button type="button" class="btn" id="nextBtn1">Continue to Verification</button>
                        <div id="loading" style="display: none;">
                            <div class="spinner"></div>
                        </div>

                    </div>
                    
                </div>
                
                <!-- Verification Section -->
                <div class="form-section" data-section="2">
                    <div class="section-title">Verify Your Account</div>
                    <div class="section-content" style="max-width: 500px;">
                        <p style="text-align: center; margin-bottom: 1.5rem; color: #6c757d;">
                            We've sent a 6-digit verification code to your email address.
                        </p>
                        
                        <div class="form-group">
                            <label for="otp">Verification Code</label>
                            <input type="text" id="otp" name="otp" class="form-control" placeholder="Enter 6-digit OTP" maxlength="6">
                        </div>
                        
                        <div class="form-group text-center">
                            <p style="font-size: 0.875rem; text-align: center;">Didn't receive code? <a href="#" id="resendOtp" style="color: var(--primary); text-decoration: none;">Resend OTP</a></p>
                        </div>
                        
                        <div class="form-navigation">
                            <button type="button" class="btn btn-secondary" id="prevBtn2">Back</button>
                            <button type="submit" class="btn" id="submitBtn">Complete Signup</button>
                        </div>
                    </div>
                </div>
            </form>
            
            <div class="form-footer">
                Already have an account? <a href="/user/login">Log In</a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Toast notification function
            function showToast(message, type = 'error') {
                Swal.fire({
                    icon: type,
                    title: message,
                    toast: true,
                    position: 'top-end',
                    timer: 2000,
                    showConfirmButton: false,
                    timerProgressBar: true
                });
            }

            // Step navigation
            function goToStep(index) {
                $('.form-section').removeClass('active');
                $(`.form-section[data-section="${index + 1}"]`).addClass('active');
                $('.step').removeClass('active completed');
                
                for (let i = 0; i <= index; i++) {
                    if (i === index) {
                        $(`.step[data-step="${i + 1}"]`).addClass('active');
                    } else {
                        $(`.step[data-step="${i + 1}"]`).addClass('completed');
                    }
                }
                
                if (index > 0) {
                    $('.step-line').addClass('active');
                }
            }

            // Continue to verification
           $('#nextBtn1').click(function () {
                const formData = {
                    name: $('#name').val(),
                    email: $('#email').val(),
                    phone: $('#phone').val(),
                    password: $('#password').val(),
                    confirmPassword: $('#confirmPassword').val(),
                    referralCode: $('#referralCode').val()
                };

                // Show loader and disable button
                $('#loading').show();
                $('#nextBtn1').prop('disabled', true).text('Sending...');

                $.ajax({
                    url: '/user/signup',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (res) {
                        showToast('OTP sent to your email successfully!', 'success');
                        goToStep(1);
                    },
                    error: function (xhr) {
                        const response = xhr.responseJSON;
                        if (response && response.errors) {
                            const errorMessage = response.errors.general || Object.values(response.errors)[0];
                            showToast(errorMessage, 'error');
                        } else {
                            showToast('An error occurred. Please try again.', 'error');
                        }
                    },
                    complete: function () {
                        // Hide loader and re-enable button
                        $('#loading').hide();
                        $('#nextBtn1').prop('disabled', false).text('Continue to Verification');
                    }
                });
            });


            // OTP verification
            $('#signupForm').submit(function (e) {
                e.preventDefault();
                const otp = $('#otp').val();
                
                $.ajax({
                    url: '/user/verify-otp',
                    method: 'POST',
                    data: { otp },
                    success: function (res) {
                        if (res.referralRewarded) {
                            showToast('Referral bonus added to wallets!', 'success');
                        }
                        showToast('Signup successful! Redirecting...', 'success');
                        setTimeout(() => {
                            window.location.href = '/user/login';
                        }, 2000);
                    },
                    error: function (xhr) {
                        const response = xhr.responseJSON;
                        if (response && response.error) {
                            showToast(response.error, 'error');
                        } else {
                            showToast('Invalid OTP. Please try again.', 'error');
                        }
                        $('#otp').val('').focus();
                    }
                });
            });

            // Back button
            $('#prevBtn2').click(() => goToStep(0));

            // Resend OTP
            $('#resendOtp').click(function (e) {
                e.preventDefault();
                
                $.ajax({
                    url: '/user/resendOtp',
                    method: 'POST',
                    success: function (res) {
                        showToast('OTP resent successfully!', 'success');
                        $('#otp').val('').focus();
                    },
                    error: function (xhr) {
                        const response = xhr.responseJSON;
                        if (response && response.error) {
                            showToast(response.error, 'error');
                        } else {
                            showToast('Failed to resend OTP. Please try again.', 'error');
                        }
                    }
                });
            });

            // OTP input formatting - only allow numbers
            $('#otp').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length > 6) {
                    value = value.substring(0, 6);
                }
                $(this).val(value);
            });
        });
        
        // Google Sign-In callback
        
    </script>
</body>
</html>