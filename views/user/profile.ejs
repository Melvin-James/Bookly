<div class="max-w-6xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden p-6 md:p-10 mt-6 space-y-8">
  <!-- Profile Section -->
  <div class="flex flex-col sm:flex-row items-center sm:items-start sm:justify-between gap-8">
    
    <!-- Profile Image -->
    <div class="flex-shrink-0">
      <img 
        src="/uploads/profileImages/<%= userData.userImage[0] %>" 
        alt="Profile Image" 
        class="w-32 h-32 sm:w-36 sm:h-36 object-cover rounded-full border-4 border-primary shadow-lg transition-transform hover:scale-105"
      />
    </div>

    <!-- Profile Info -->
    <div class="flex-1 text-center sm:text-left">
      <h2 class="text-2xl sm:text-3xl font-extrabold theme mb-2">Hello, <%= userData.name %></h2>
      <div class="text-gray-700 space-y-2 text-sm sm:text-base">
        <p class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m8 0l-4-4m4 4l-4 4" />
          </svg>
          <span><strong>Email:</strong> <%= userData.email %></span>
        </p>
        <p class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h2l3.6 7.59a1 1 0 00.76.41h8.24a1 1 0 00.95-.68l1.4-4.2A1 1 0 0019 7H6" />
          </svg>
          <span><strong>Phone:</strong> <%= userData.phone %></span>
        </p>
      </div>
    </div>
  </div>

  <!-- Address Section -->
  <div class="border-t border-gray-200 pt-6">
    <h3 class="text-xl font-semibold theme mb-4 flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 .55-.45 1-1 1s-1-.45-1-1 .45-1 1-1 1 .45 1 1zm-1 7c4.418 0 8-3.582 8-8S15.418 2 11 2 3 5.582 3 10s3.582 8 8 8z" />
      </svg>
      Saved Addresses
    </h3>

    <% if (addressData.length) { %>
      <div class="grid sm:grid-cols-2 gap-6">
        <% addressData.forEach(addr => { %>
          <div class="bg-gray-50 p-5 rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition">
            <p class="font-semibold text-primary mb-2"><%= addr.addressType %> Address</p>
            <div class="text-gray-700 text-sm space-y-2">
              <p class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A9.001 9.001 0 1118.88 6.196 9.001 9.001 0 015.12 17.804z" />
                </svg>
                <%= addr.name %>
              </p>

              <p class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a2 2 0 01-2.828 0l-4.243-4.243A8 8 0 1117.657 16.657z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <%= addr.city %>, <%= addr.state %> - <%= addr.pincode %>
              </p>

              <p class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 11c0 .55-.45 1-1 1s-1-.45-1-1 .45-1 1-1 1 .45 1 1z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 11c4.418 0 8-3.582 8-8" />
                </svg>
                Landmark: <%= addr.landmark %>
              </p>

              <p class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 10l1-2m4 8l1-2m6 0l1 2m4-8l1 2M4 6l8-4 8 4M4 6v6c0 1.104.896 2 2 2h12c1.104 0 2-.896 2-2V6" />
                </svg>
                Phone: <%= addr.phone %> | Alt: <%= addr.altPhone %>
              </p>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-500">You havenâ€™t added any addresses yet.</p>
    <% } %>
  </div>
</div>
