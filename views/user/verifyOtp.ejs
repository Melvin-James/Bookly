<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6 mt-8">
    <h2 class="text-xl font-bold theme mb-4">Verify Your Email</h2>
  
    <% if (typeof error !== 'undefined') { %>
      <div class="text-red-600 mb-4"><%= error %></div>
    <% } %>
  
    <form action="/user/profile/verify-otp" method="POST" class="space-y-4">
      <div>
        <label class="block font-medium mb-1">Enter OTP sent to your new email</label>
        <input type="text" name="otp" maxlength="6" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-theme" />
      </div>
  
      <button type="submit" class="bg-theme text-white px-6 py-2 rounded-md hover:bg-opacity-90 transition">Verify & Update</button>
    </form>
  </div>
  