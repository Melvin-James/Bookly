<div class="max-w-xl mx-auto bg-white shadow-md rounded-lg p-6 mt-6">
    <h2 class="text-2xl font-semibold theme mb-4">Change Password</h2>
  
    <% if (typeof error !== 'undefined') { %>
      <div class="text-red-600 mb-4"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined') { %>
      <div class="text-green-600 mb-4"><%= success %></div>
    <% } %>
  
    <form method="POST" action="/user/profile/change-password" class="space-y-4">
      <div>
        <label class="block font-medium mb-1">Current Password</label>
        <input type="password" name="currentPassword" required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-theme" />
      </div>
  
      <div>
        <label class="block font-medium mb-1">New Password</label>
        <input type="password" name="newPassword" required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-theme" />
      </div>
  
      <div>
        <label class="block font-medium mb-1">Confirm New Password</label>
        <input type="password" name="confirmPassword" required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-theme" />
      </div>
  
      <div>
        <button type="submit" class="bg-theme text-white px-6 py-2 rounded-md hover:bg-opacity-90 transition">Update Password</button>
      </div>
    </form>
  </div>
  