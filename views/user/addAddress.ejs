<div class="max-w-3xl mx-auto p-6 bg-white rounded-xl shadow mt-8">
    <h2 class="text-2xl font-bold theme mb-6"><%= address ? 'Edit Address' : 'Add New Address' %></h2>
  
    <% if (typeof error !== 'undefined') { %>
      <div class="text-red-600 mb-4"><%= error %></div>
    <% } %>
  
    <form method="POST" action="<%= formAction %>" class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <label class="block font-medium mb-1">Full Name</label>
        <input name="name" value="<%= address?.name || '' %>" required class="input" />
      </div>
  
      <div>
        <label class="block font-medium mb-1">Address Type</label>
        <select name="addressType" required class="input">
          <option value="">Select</option>
          <option value="Home" <%= address?.addressType === 'Home' ? 'selected' : '' %>>Home</option>
          <option value="Work" <%= address?.addressType === 'Work' ? 'selected' : '' %>>Work</option>
        </select>
      </div>
  
      <div>
        <label class="block font-medium mb-1">City</label>
        <input name="city" value="<%= address?.city || '' %>" required class="input" />
      </div>
  
      <div>
        <label class="block font-medium mb-1">State</label>
        <input name="state" value="<%= address?.state || '' %>" required class="input" />
      </div>
  
      <div>
        <label class="block font-medium mb-1">Pincode</label>
        <input type="number" name="pincode" value="<%= address?.pincode || '' %>" required class="input" />
      </div>
  
      <div>
        <label class="block font-medium mb-1">Landmark</label>
        <input name="landmark" value="<%= address?.landmark || '' %>" required class="input" />
      </div>
  
      <div>
        <label class="block font-medium mb-1">Phone</label>
        <input name="phone" value="<%= address?.phone || '' %>" required class="input" />
      </div>
  
      <div>
        <label class="block font-medium mb-1">Alt Phone</label>
        <input name="altPhone" value="<%= address?.altPhone || '' %>" required class="input" />
      </div>
  
      <div class="col-span-full pt-4">
        <button class="bg-theme text-white px-6 py-2 rounded hover:bg-opacity-90 transition">
          <%= address ? 'Update Address' : 'Save Address' %>
        </button>
      </div>
    </form>
  </div>
  
