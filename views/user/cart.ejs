<%- include("../partials/userHead") %>

<div class="max-w-6xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 theme">My Cart</h1>
  
    <% if (cartItems.length > 0) { %>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Cart Items -->
        <div class="lg:col-span-2 space-y-6">
          <% cartItems.forEach(item => { %>
            <div class="flex flex-col sm:flex-row items-center gap-4 bg-white shadow rounded-lg p-4">
              <!-- Image -->
              <div class="w-24 h-24 flex-shrink-0">
                <img src="/uploads/product-images/<%= item.product.productImage[0] %>" alt="<%= item.product.name %>" class="w-full h-full object-cover rounded-md">
              </div>
  
              <!-- Info -->
              <div class="flex-1">
                <h2 class="text-lg font-semibold"><%= item.product.name %></h2>
                <p class="text-gray-600 text-sm">â‚¹ <%= item.product.price.toFixed(2) %></p>
                <p class="text-gray-500 text-xs mt-1"><%= item.product.category %></p>
              </div>
  
              <!-- Quantity Controls -->
              <div class="flex items-center gap-2">
                <form action="/user/cart/update/<%= item.product._id %>" method="POST">
                  <input type="hidden" name="action" value="decrease" />
                  <button class="bg-gray-200 px-2 py-1 rounded hover:bg-gray-300 transition">âˆ’</button>
                </form>
  
                <span class="px-3 py-1 border rounded text-sm"><%= item.quantity %></span>
  
                <form action="/user/cart/update/<%= item.product._id %>" method="POST">
                  <input type="hidden" name="action" value="increase" />
                  <button class="bg-gray-200 px-2 py-1 rounded hover:bg-gray-300 transition">+</button>
                </form>
              </div>
  
              <!-- Remove Button -->
              <form action="/user/cart/remove/<%= item.product._id %>" method="POST">
                <button class="text-red-500 hover:text-red-700 transition" title="Remove">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </button>
              </form>
            </div>
          <% }) %>
        </div>
  
        <!-- Cart Summary -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-xl font-semibold mb-4">Order Summary</h3>
          <% cartItems.forEach(item => { %>
            <div class="flex justify-between text-sm text-gray-700 mb-2">
              <span><%= item.product.name %> x <%= item.quantity %></span>
              <span>â‚¹ <%= (item.product.price * item.quantity).toFixed(2) %></span>
            </div>
          <% }) %>
  
          <hr class="my-4" />
  
          <div class="flex justify-between text-lg font-semibold">
            <span>Total:</span>
            <span>â‚¹ <%= cartTotal.toFixed(2) %></span>
          </div>
  
          <div class="mt-6">
            <a href="/user/checkout" class="w-full inline-block bg-primary text-white text-center py-2 rounded-md hover:bg-primary-dark transition">
              Proceed to Checkout
            </a>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="text-center py-16">
        <h2 class="text-2xl font-bold text-gray-700 mb-4">Your cart is empty ðŸ›’</h2>
        <a href="/user/shop" class="bg-primary text-white px-5 py-2 rounded hover:bg-primary-dark transition">
          Continue Shopping
        </a>
      </div>
    <% } %>
  </div>

  
<%- include("../partials/userFooter") %>
  